<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../head.ejs") %>
</head>
<body>
    <%- include("../nav.ejs") %>
    <section>
        <div class="container">
            <h2>Danh sách sản phẩm:</h2>
            <a href="/products/create">Thêm sản phẩm</a>
            <table class="table">
                <thead>
                    <th></th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th></th>
                </thead>
                <tbody>
                    <% products.forEach(e=>{ %>
                        <tr>
                            <td>
                                <img width="80" src="data:<%= e.thumbnail.contentType %>;base64,<%= e.thumbnail.data %>" />
                            </td>
                            <td><%= e.name %></td>
                            <td><%= e.price %></td>
                            <td><%= e.qty %></td>
                            <td>
                                <a href="#" class="btn btn-outline-primary">Edit</a>
                            </td>
                        </tr>    
                   <% }) %>
                </tbody>
            </table>
        </div>
    </section>
</body>
</html>